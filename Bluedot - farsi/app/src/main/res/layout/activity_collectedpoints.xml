<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backblue"
    tools:context="com.example.neshat.bluedot.collectedpoints">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Offer"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Points"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:layout_marginStart="30dp"
        android:layout_alignStart="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Location"
        android:textSize="20sp"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Aftab"
        android:id="@+id/textView8"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Jahan Koudak"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80pts"
        android:textColor="#000"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignEnd="@+id/textView5" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/back"
        android:onClick="backtopro"
        android:background="#9fccff"
        android:text="back to profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/name" />


    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Available Points"
        android:onClick="showavailable"
        android:background="#0000ff"
        android:textColor="#fff"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/back"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Points : 80"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_above="@+id/back"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp" />






</RelativeLayout>
